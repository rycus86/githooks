#!/bin/sh
DIR=$(cd "$(dirname "$0")" && pwd)
. "$DIR/.export-staged"

assertStaged

SUCCESS=0

checkTodo() {
    LINES=$(grep -rnHE "(TODO|FIXME)" "$1")

    if [ -n "$LINES" ]; then
        echo "! TODO or FIXME found in:"
        echo "$LINES"
        SUCCESS=1
    fi
}

if [ -n "$GITHOOKS_ON_DEMAND_EXEC" ]; then
    STAGED_FILES=$(find . -type f)
elif [ -n "${STAGED_FILES_REFERENCE}" ]; then
    STAGED_FILES="$(cat "${STAGED_FILES_REFERENCE}")"
fi

for FILE in $STAGED_FILES; do
    if echo "$FILE" | grep -qvE '(/cover/|/pre-commit/no-todo-or-fixme|\.go|\.md)'; then
        checkTodo "$FILE"
    fi
done

if [ "$SUCCESS" = "0" ]; then
    echo "* No TODO or FIXME detected"
else
    exit "$SUCCESS"
fi
